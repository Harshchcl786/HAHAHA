pipeline{
        agent any 
        tools
        {
        	maven 'M3'
        	jdk 'java'	
        }
        
stages{
        stage('Build'){
         steps{
         	sh 'mvn compile'
         }
       }  
       
       stage('QA with SonarQube')
       {
       		steps{
       			withSonarQubeEnv('sonar'){
       			sh 'mvn clean package sonar:sonar'
       			 }
   			}
       }
          stage("Quality Gate") {
            steps {
              timeout(time: 1, unit: 'HOURS') {
                waitForQualityGate abortPipeline: true
              }
            }
          }
 stage('Deploy')
      {
      	steps{
        sh 'ansible-playbook demo.yml'	
       	}
       }  
     }     
  }
